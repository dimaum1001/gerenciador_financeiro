# Configurações do Backend - Gerenciador Financeiro

# Database
# Substitua YOUR_NEON_PASSWORD pela senha do usuário neondb_owner fornecida no painel do Neon
DATABASE_URL=postgresql+psycopg://neondb_owner:YOUR_NEON_PASSWORD@ep-lingering-math-afd5bi43-pooler.c-2.us-west-2.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=4320

# Environment
ENVIRONMENT=development
TZ=America/Sao_Paulo
PYTHONPATH=/app

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=csv,xlsx,xls,ofx,qif
UPLOAD_PATH=storage/attachments

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Email (futuro)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@finance.com
SMTP_USE_TLS=true

# Cache
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Features
ENABLE_IMPORT=true
ENABLE_EXPORT=true
ENABLE_ATTACHMENTS=true
ENABLE_RECURRING=true
ENABLE_BUDGETS=true

# Development
DEBUG=false
RELOAD=false
